<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="fieldTitle" format="string"/>
    <attr name="fieldError" format="string"/>
    <attr name="fieldTitleTextColor" format="color"/>
    <attr name="fieldErrorTextColor" format="color"/>

    <declare-styleable name="NormalBorderedStyleEditText">
        <attr name="fieldTitle"/>
        <attr name="fieldError"/>
        <attr name="fieldTitleTextColor"/>
        <attr name="fieldErrorTextColor"/>

        <attr name="android:imeOptions"/>
        <attr name="android:inputType"/>
        <attr name="android:maxLines"/>
        <attr name="android:maxLength"/>
    </declare-styleable>

    <declare-styleable name="PasswordBorderedStyleEditText">
        <attr name="fieldTitle"/>
        <attr name="fieldError"/>
        <attr name="fieldTitleTextColor"/>
        <attr name="fieldErrorTextColor"/>

        <attr name="android:imeOptions"/>
        <attr name="android:maxLines"/>
        <attr name="android:maxLength"/>
    </declare-styleable>

</resources>