<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="fieldLabel" format="string"/>
    <attr name="assistiveText" format="string"/>
    <attr name="fieldLabelTextColor" format="color"/>
    <attr name="assistiveTextColor" format="color"/>

    <declare-styleable name="NormalBorderedStyleEditText">
        <attr name="fieldLabel"/>
        <attr name="assistiveText"/>
        <attr name="fieldLabelTextColor"/>
        <attr name="assistiveTextColor"/>

        <attr name="android:imeOptions"/>
        <attr name="android:inputType"/>
        <attr name="android:maxLines"/>
        <attr name="android:maxLength"/>
        <attr name="android:hint"/>
        <attr name="android:textAppearance"/>
        <attr name="android:focusable"/>
        <attr name="android:clickable"/>
        <attr name="android:focusableInTouchMode"/>

    </declare-styleable>

    <declare-styleable name="PasswordBorderedStyleEditText">
        <attr name="fieldLabel"/>
        <attr name="assistiveText"/>
        <attr name="fieldLabelTextColor"/>
        <attr name="assistiveTextColor"/>
        <attr name="endIconDrawable"/>
        <attr name="endIconMode"/>
        <attr name="startIconDrawable"/>
        <attr name="android:imeOptions"/>
        <attr name="android:maxLines"/>
        <attr name="android:maxLength"/>
        <attr name="android:hint"/>
        <attr name="android:inputType"/>
        <attr name="android:textAppearance"/>
    </declare-styleable>

    <declare-styleable name="PrefixedBorderedStyleEditText">
        <attr name="fieldLabel"/>
        <attr name="assistiveText"/>
        <attr name="fieldLabelTextColor"/>
        <attr name="assistiveTextColor"/>
        <attr name="prefix" format ="string"/>

        <attr name="android:imeOptions"/>
        <attr name="android:textColorHint"/>
        <attr name="android:maxLines"/>
        <attr name="android:maxLength"/>
        <attr name="android:inputType"/>
        <attr name="android:hint"/>
        <attr name="android:textAppearance"/>
        <attr name="android:focusable"/>
        <attr name="android:clickable"/>
        <attr name="android:focusableInTouchMode"/>

    </declare-styleable>

    <declare-styleable name="BorderedStyleSpinner">
        <attr name="fieldLabel"/>
        <attr name="fieldLabelTextColor"/>
        <attr name="assistiveText"/>
        <attr name="assistiveTextColor"/>
        <attr name="android:textAppearance"/>
    </declare-styleable>

    <declare-styleable name="AutoCompleteBorderedStyleTextView">
        <attr name="fieldLabel"/>
        <attr name="assistiveText"/>
        <attr name="fieldLabelTextColor"/>
        <attr name="assistiveTextColor"/>

        <attr name="android:imeOptions"/>
        <attr name="android:inputType"/>
        <attr name="android:maxLines"/>
        <attr name="android:maxLength"/>
        <attr name="android:hint"/>
        <attr name="android:textAppearance"/>
    </declare-styleable>


</resources>