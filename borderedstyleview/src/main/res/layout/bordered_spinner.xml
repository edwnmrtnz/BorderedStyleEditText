<?xml version="1.0" encoding="utf-8"?>
<merge  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:parentTag="android.support.constraint.ConstraintLayout"
        tools:orientation="horizontal">

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            tools:visibility="visible"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            app:layout_constraintEnd_toEndOf="@+id/etField"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etField"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvErrorText"
            android:visibility="invisible"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Required"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvTitle"
            app:layout_constraintEnd_toEndOf="@+id/etField"
            app:layout_constraintStart_toEndOf="@+id/tvTitle"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"/>

    <android.support.v7.widget.AppCompatEditText
            android:layout_marginTop="8dp"
            android:id="@+id/etField"
            android:layout_width="0dp"
            android:minWidth="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bordered_roundbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvErrorText"/>

    <android.support.v7.widget.AppCompatImageView
            android:padding="0dp"
            android:id="@+id/ivDropDown"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:srcCompat="@drawable/ic_chevron_down"
            android:contentDescription="@string/app_name"
            app:layout_constraintTop_toTopOf="@+id/etField"
            app:layout_constraintBottom_toBottomOf="@+id/spinner"
            app:layout_constraintEnd_toEndOf="@+id/etField"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <android.support.v7.widget.AppCompatSpinner
            android:padding="0dp"
            android:visibility="invisible"
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/etField"
            app:layout_constraintTop_toTopOf="@+id/etField"
            app:layout_constraintStart_toStartOf="@+id/etField" app:layout_constraintEnd_toEndOf="@+id/etField"/>

</merge>