<?xml version="1.0" encoding="utf-8"?>
<merge  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
        tools:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:visibility="gone"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textColor="@color/greyish"
            app:layout_constraintEnd_toEndOf="@+id/etField"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etField"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAssistiveText"
            android:visibility="gone"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            tools:text="Required"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/etField" android:layout_marginRight="8dp"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/etField"
            android:layout_width="0dp"
            android:minWidth="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bordered_roundbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:padding="0dp"
            android:id="@+id/ivDropDown"
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:srcCompat="@drawable/ic_chevron_down"
            android:contentDescription="@string/app_name"
            app:layout_constraintTop_toTopOf="@+id/etField"
            app:layout_constraintBottom_toBottomOf="@+id/spinner"
            app:layout_constraintEnd_toEndOf="@+id/etField"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <androidx.appcompat.widget.AppCompatSpinner
            android:gravity="start"
            android:textAlignment="textStart"
            android:background="@null"
            android:padding="0dp"
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/etField"
            app:layout_constraintTop_toTopOf="@+id/etField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivDropDown"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"/>

</merge>