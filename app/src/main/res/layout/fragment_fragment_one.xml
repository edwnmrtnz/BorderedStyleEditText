<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:padding="16dp"
             tools:context=".FragmentOne">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  tools:ignore="UselessParent">

        <com.github.edwnmrtz.borderedstyleedittext.PrefixedBorderedStyleEditText
                android:id="@+id/etPrefixed"
                android:inputType="number"
                app:prefix="+63"
                android:hint="9314543084"
                app:assistiveText="required"
                android:textColorHint="@color/colorPrimary"
                app:fieldLabel="PrefixedEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:ignore="HardcodedText"/>


        <com.github.edwnmrtz.borderedstyleedittext.NormalBorderedStyleEditText
                android:layout_marginTop="10dp"
                android:inputType="text"
                app:fieldLabel="NormalBorderedStyleEditText | Text"
                android:id="@+id/etNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.github.edwnmrtz.borderedstyleedittext.PasswordBorderedStyleEditText
                android:layout_marginTop="10dp"
                android:inputType="text"
                app:fieldLabel="PasswordBorderedStyleEditText"
                android:id="@+id/etPassword"
                app:fieldLabelTextColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.github.edwnmrtz.borderedstyleedittext.AutoCompleteBorderedStyleEditText
                android:layout_marginTop="10dp"
                android:inputType="text"
                app:fieldLabel="AutoCompleteBorderedStyleEditText"
                android:id="@+id/etAutoComplete"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.github.edwnmrtz.borderedstyleedittext.BorderedStyleSpinner
                android:layout_marginTop="10dp"
                android:inputType="text"
                app:fieldLabel="Suffix"
                app:assistiveText="required"
                android:id="@+id/spSuffix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Error" tools:ignore="HardcodedText"/>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRemoveError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove Error" tools:ignore="HardcodedText"/>

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/etField"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"/>

    </LinearLayout>

</FrameLayout>