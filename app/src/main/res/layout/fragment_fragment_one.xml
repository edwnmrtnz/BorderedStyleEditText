<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:padding="16dp"
             tools:context=".FragmentOne">
  
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  tools:ignore="UselessParent">

        <com.github.edwnmrtz.borderedstyleedittext.PrefixedBorderedStyleEditText
                android:inputType="text"
                app:prefix="+63"
                app:assistiveText=""
                app:fieldLabel="PrefixedBorderedStyleEditText | Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <com.github.edwnmrtz.borderedstyleedittext.NormalBorderedStyleEditText
                android:layout_marginTop="10dp"
                android:inputType="number"
                app:fieldLabel="NormalBorderedStyleEditText | Number"
                android:id="@+id/etNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.github.edwnmrtz.borderedstyleedittext.PasswordBorderedStyleEditText
                android:layout_marginTop="10dp"
                android:inputType="text"
                app:fieldLabel="PasswordBorderedStyleEditText"
                android:id="@+id/etPassword"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.github.edwnmrtz.borderedstyleedittext.AutoCompleteBorderedStyleEditText
                android:layout_marginTop="10dp"
                android:inputType="text"
                app:fieldLabel="AutoCompleteBorderedStyleEditText"
                android:id="@+id/etAutoComplete"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.github.edwnmrtz.borderedstyleedittext.BorderedStyleSpinner
                android:layout_marginTop="10dp"
                android:inputType="text"
                app:fieldLabel="dBorderedStyleSpinner"
                app:assistiveText="d"

                android:id="@+id/borderedStyleSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

  </LinearLayout>

</FrameLayout>