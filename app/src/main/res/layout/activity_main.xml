<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity">


    <com.github.edwnmrtz.borderedstyleedittext.NormalBorderedStyleEditText
        app:fieldTitle="Mobile Number"
        app:fieldError="Invalid Mobile Number"
        android:inputType="number"
        android:id="@+id/etMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </com.github.edwnmrtz.borderedstyleedittext.NormalBorderedStyleEditText>

    <com.github.edwnmrtz.borderedstyleedittext.PasswordBorderedStyleEditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:fieldError="Invalid Password"
        app:fieldTitle="Password"
        app:layout_constraintTop_toBottomOf="@+id/etMobileNumber" />


    <com.github.edwnmrtz.borderedstyleedittext.BorderedStyleSpinner
        android:layout_marginTop="8dp"
        app:fieldTitle="Suffix"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        android:id="@+id/spnSuffix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="LOGIN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnSuffix" />


</android.support.constraint.ConstraintLayout>