<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <com.github.edwnmrtz.borderedstyleedittext.NormalBorderedStyleEditText
            app:fieldTitle="First Name"
            android:id="@+id/normalBorderedStyleEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <com.github.edwnmrtz.borderedstyleedittext.NormalBorderedStyleEditText
            android:id="@+id/normalBorderedStyleEditText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fieldTitle="Last Name"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/normalBorderedStyleEditText"
            app:layout_constraintStart_toStartOf="@+id/normalBorderedStyleEditText"
            app:layout_constraintEnd_toStartOf="@+id/normalBorderedStyleEditText3" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"/>

    <com.github.edwnmrtz.borderedstyleedittext.BorderedStyleSpinner
            app:fieldTitle="Suffix"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/normalBorderedStyleEditText3"
            app:layout_constraintEnd_toEndOf="@+id/normalBorderedStyleEditText"
            app:layout_constraintBottom_toBottomOf="@+id/normalBorderedStyleEditText2"
            app:layout_constraintTop_toTopOf="@+id/normalBorderedStyleEditText2"/>



</android.support.constraint.ConstraintLayout>